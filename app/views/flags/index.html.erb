<p id="notice"><%= notice %></p>
<h1><%= Flag.model_name.human(count: @flags.count) %></h1>
<table class="table table-hover">  
  <thead>
    <tr>
      <th><%= @flags.human_attribute_name(:state) %> </th>
      <th><%= @flags.human_attribute_name(:acronym) %></th>
      <th><%= @flags.human_attribute_name(:capital) %></th>
      <th><%= @flags.human_attribute_name(:url_img) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flags.each do |flag| %>
      <tr>
        <td> <%= flag.state %> </td>
        <td><%= flag.acronym %></td>
        <td><%= flag.capital %></td>
        <td><%= image_tag flag.url_img, size:"50x30" %></td>
        <td><%= link_to t('links.show') , flag %></td>
        <td><%= link_to t('links.edit') , edit_flag_path(flag) %></td>
        <td><%= link_to t('links.delete') , flag, method: :delete, data: { confirm: t('delete_confirmation') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('links.new_flag'), new_flag_path, class:"btn btn-primary"%>
<br><br>
<%= link_to t('links.back'), welcome_index_path, class:"btn btn-outline-secondary"%>
<br>
