<%= form_with(model: region, local: true) do |form| %>

  <div class="mb-3">
    <%= Region.human_attribute_name(:region_name) %>
    <%= form.text_field :region_name , class:"form-control" %>
  </div>
  
  <div class="mb-3">
    <%= Region.human_attribute_name(:acronym) %>
    <%= form.text_field :acronym , class:"form-control" %>
  </div>

  <div class="actions">
    <%= form.submit t('links.update'), class:"btn btn-success" %> <br>
  </div>
  <br>
<% end %>
