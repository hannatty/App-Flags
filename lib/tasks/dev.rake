namespace :dev do
  
  desc "Configura o ambiente de desenvolvimento"
  task setup: :environment do

    if Rails.env.development?
      show_spinner("Apagando BD", "BD apagado com sucesso!") {%x(rails db:drop)}
      show_spinner("Criando BD", "BD criado com sucesso!") {%x(rails db:create)}
      show_spinner("Migrando BD", "BD migrado com sucesso!") {%x(rails db:migrate)}
      %x(rails dev:add_regions)
      %x(rails dev:add_flags)
      
    else
      puts "Você não está em ambiente de desenvolvimento."
    end
  end

  desc "Cadastra bandeiras"
  task add_flags: :environment do
    show_spinner("Cadastrando bandeiras...", "Concluído!") do

   
  flags =  [
            {
              state: "Acre",
              acronym: "AC",
              capital: "Rio Branco",
              url_img: "data:image/jpeg;base64,",
              region: Region.find_by(acronym: "N"),            
            },
            {
              state: "Alagoas",
              acronym: "AL",
              capital: "Maceió",
              url_img: "data:image/png;base64,",
              region: Region.find_by(acronym: "NE"),   
            },
            {
              state: "Amapá",
              acronym: "AP",
              capital: "Macapá",
              url_img: "data:image/png;base64,",
              region: Region.find_by(acronym: "N"),               
            },
            {
              state: "Amazonas",
              acronym: "AM",
              capital: "Manaus",
              url_img: "data:image/png;base64,",
              region: Region.find_by(acronym: "N"),   
            }
          ]

        flags.each do |flag|
            Flag.find_or_create_by!(flag)
        end
      end
    end

    desc "Cadastro de regiões"
    task add_regions: :environment do
      show_spinner("Cadastrando regiões...", "Regiões cadastradas com sucesso!") do
        regions = [
          {region_name: "Norte", acronym: "N"},
          {region_name: "Sul", acronym: "S"},
          {region_name: "Nordeste", acronym: "NE"},
          {region_name: "Sudeste", acronym: "SE"}
        ]
      regions.each do |region|
        Region.find_or_create_by!(region)
      end
    end
  end

private
  def show_spinner(start_msg, end_msg = "")
    spinner = TTY::Spinner.new("[:spinner] #{start_msg})")
    spinner.auto_spin 
    yield
    spinner.success("(#{end_msg})")
  end
end



